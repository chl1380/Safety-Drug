<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="상세 부작용 설명"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/detail_animation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:paddingTop="-50dp"
                android:paddingBottom="-50dp"
                app:lottie_fileName="detail_display.json"
                android:gravity="center"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                />

            <TextView
                android:id="@+id/side_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="TextView" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/below_animation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:lottie_fileName="below_animation.json"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                />

            <TextView
                android:id="@+id/detail_side"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>